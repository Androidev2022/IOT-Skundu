<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreatedColorDetailsFragment">

   <LinearLayout
       android:orientation="vertical"
       android:gravity="center_horizontal"
       android:layout_marginTop="30dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <pl.droidsonroids.gif.GifImageView
           android:layout_gravity="center_horizontal"
           android:layout_centerHorizontal="true"
           android:layout_width="180dp"
           android:src="@drawable/anim2"
           android:layout_height="180dp"
           />
       <TextView
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:fontFamily="@font/poppins_semibold"
           android:textSize="19sp"
           android:textStyle="bold"
           android:textColor="@color/Red_Wine"
           android:gravity="center_horizontal"
           android:text="Created Color Details" />
       <androidx.cardview.widget.CardView
           android:layout_marginTop="10dp"
           android:layout_marginRight="25dp"
           android:layout_marginLeft="25dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           app:cardBackgroundColor="#ffffff"
           app:cardCornerRadius="10dp"
           app:cardElevation="6dp"
           app:cardUseCompatPadding="true">

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               <com.mikhaellopez.circularimageview.CircularImageView
                   android:id="@+id/created_color"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/circle"
                   android:scaleType="centerCrop"
                   app:civ_border_color="@color/Black"
                   app:civ_border_width="3dp"
                   app:civ_shadow="true"
                   app:civ_shadow_color="#95484A"
                   app:civ_shadow_radius="8dp" />

                   <LinearLayout
                       android:layout_centerVertical="true"
                       android:layout_toRightOf="@+id/created_color"
                       android:gravity="center_vertical"
                       android:layout_gravity="center_vertical"
                       android:orientation="vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/txt_color_name"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="left"
                           android:textSize="18sp"
                           android:textStyle="bold"
                           android:textColor="@color/Gray"
                           android:gravity="left"
                           android:text="DOGE/IDR" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="left"
                           android:fontFamily="@font/poppins_medium"
                           android:textSize="15sp"
                           android:textColor="#AAA3A1"
                           android:gravity="left"
                           android:text="Include 18% GST "/>



                   </LinearLayout>
                   <TextView
                       android:id="@+id/txt_price"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="left"
                       android:textSize="18sp"
                       android:textStyle="bold"
                       android:textColor="@color/Gray"
                       android:gravity="left"
                       android:text="$650" />

               </RelativeLayout>
           </LinearLayout>

       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_marginRight="20dp"
           android:layout_marginLeft="20dp"
           android:layout_gravity="center_horizontal"
           android:layout_alignParentBottom="true"
           android:layout_width="match_parent"
           android:layout_height="75dp"
           android:layout_alignParentRight="true"
           android:layout_marginTop="25dp"
           android:layout_marginBottom="30dp"
           android:background="@android:color/transparent"
           app:cardBackgroundColor="@color/White"
           app:cardCornerRadius="10dp"
           app:cardElevation="6dp"
           app:cardUseCompatPadding="true">


           <RelativeLayout
               android:id="@+id/btn_Done"
               android:foreground="?android:attr/selectableItemBackground"
               android:background="@color/Yellow_Green"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_gravity="center_vertical"
               android:layout_weight="2"
               android:gravity="center_vertical"
               android:orientation="horizontal"
               android:paddingLeft="25dp">
<LinearLayout
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:text="Done "
        android:fontFamily="sans-serif"
        android:textColor="@color/White"
        android:textSize="17sp" />

    <ImageView
        android:layout_centerVertical="true"
        android:padding="6dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/right_arrow_white"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:tint="@color/White" />
</LinearLayout>


           </RelativeLayout>


       </androidx.cardview.widget.CardView>

   </LinearLayout>

</RelativeLayout>