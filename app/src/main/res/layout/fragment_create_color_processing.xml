<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateColorProcessingFragment">

   <LinearLayout
       android:weightSum="3.5"
       android:orientation="vertical"
       android:layout_marginBottom="20dp"
       android:layout_marginTop="30dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <androidx.cardview.widget.CardView
           android:visibility="gone"
           android:layout_weight="2.3"
           android:layout_marginRight="25dp"
           android:layout_marginLeft="25dp"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:background="@android:color/transparent"
           app:cardBackgroundColor="#ffffff"
           app:cardCornerRadius="10dp"
           app:cardElevation="6dp"
           app:cardUseCompatPadding="true">

           <LinearLayout
               android:layout_gravity="center"
               android:gravity="center"
               android:orientation="vertical"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:fontFamily="@font/poppins_semibold"
                   android:textSize="17sp"
                   android:textStyle="bold"
                   android:textColor="@color/Black"
                   android:gravity="center_horizontal"
                   android:text="Mixture Color" />

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="73dp"
                   android:background="@android:color/transparent"
                   app:cardBackgroundColor="#ffffff"
                   app:cardCornerRadius="20dp"
                   app:cardElevation="6dp"
                   app:cardUseCompatPadding="true">



                       <ImageView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@color/Green" />



               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="73dp"
                   android:background="@android:color/transparent"
                   app:cardBackgroundColor="#ffffff"
                   app:cardCornerRadius="20dp"
                   app:cardElevation="6dp"
                   app:cardUseCompatPadding="true">



                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@color/Red" />



               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="73dp"
                   android:background="@android:color/transparent"
                   app:cardBackgroundColor="#ffffff"
                   app:cardCornerRadius="20dp"
                   app:cardElevation="6dp"
                   app:cardUseCompatPadding="true">



                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@color/Blue_Koi" />



               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="73dp"
                   android:background="@android:color/transparent"
                   app:cardBackgroundColor="#ffffff"
                   app:cardCornerRadius="20dp"
                   app:cardElevation="6dp"
                   app:cardUseCompatPadding="true">



                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@color/Red" />



               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="73dp"
                   android:background="@android:color/transparent"
                   app:cardBackgroundColor="#ffffff"
                   app:cardCornerRadius="20dp"
                   app:cardElevation="6dp"
                   app:cardUseCompatPadding="true">



                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@color/Blue_Angel" />



               </androidx.cardview.widget.CardView>



           </LinearLayout>
       </androidx.cardview.widget.CardView>

   </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/status"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="#23b0b0"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:background="#23b0b0"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="17sp"
                android:textColor="@color/White"
                android:gravity="center_horizontal"
                android:text="Status" />
            <TextView
                android:id="@+id/txt_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="#EDE8E8"
                android:gravity="center_horizontal"
                android:text="" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:visibility="gone"
        android:layout_margin="20dp"
        android:layout_above="@+id/status"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3"
            android:text="0" />
        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3"
            android:text="1" />

    </LinearLayout>

</RelativeLayout>