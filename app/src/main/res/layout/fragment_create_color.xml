<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateColorFragment">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_weight="45"
                android:background="@android:color/transparent"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="17dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/btn_create_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#feeeee"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:padding="4dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="9dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/create" />

                    <TextView
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:fontFamily="sans-serif-medium"
                        android:text="Create Color"
                        android:textColor="#e95c5c"
                        android:textSize="12sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:textColor="@color/Black"
                android:gravity="left"
                android:text="Product Type*" />

            <androidx.cardview.widget.CardView
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edt_product_type"
                        android:textSize="13sp"
                        android:hint="Select Product Type"
                        android:paddingLeft="15dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:focusable="false"
                        android:enabled="true"
                        android:editable="false"
                        android:background="@color/White"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/down_arrow"
                        app:tint="@color/Gray" />



                </RelativeLayout>
            </androidx.cardview.widget.CardView>  <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13sp"
            android:textColor="@color/Black"
            android:gravity="left"
            android:text="Products*" />

            <androidx.cardview.widget.CardView
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edt_product_name"
                        android:textSize="13sp"
                        android:hint="Select Product"
                        android:paddingLeft="15dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:focusable="false"
                        android:enabled="true"
                        android:editable="false"
                        android:background="@color/White"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/down_arrow"
                        app:tint="@color/Gray" />



                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:textColor="@color/Black"
                android:gravity="left"
                android:text="Shade Cards*" />

            <androidx.cardview.widget.CardView
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edt_shade_card"
                        android:textSize="13sp"
                        android:hint="Select Product Type"
                        android:paddingLeft="15dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:focusable="false"
                        android:enabled="true"
                        android:editable="false"
                        android:background="@color/White"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/down_arrow"
                        app:tint="@color/Gray" />



                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:textColor="@color/Black"
                android:gravity="left"
                android:text="Color Name*" />

            <androidx.cardview.widget.CardView
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edt_color_name"
                        android:textSize="13sp"
                        android:hint="Select Shade Card"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:focusable="false"
                        android:enabled="true"
                        android:editable="false"
                        android:paddingLeft="15dp"
                        android:background="@color/White"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/down_arrow"
                        app:tint="@color/Gray" />



                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:textColor="@color/Black"
                android:gravity="left"
                android:text="Color Code*" />

            <androidx.cardview.widget.CardView
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edt_color_code"
                        android:textSize="13sp"
                        android:hint="Select Color Code"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:focusable="false"
                        android:enabled="true"
                        android:editable="false"
                        android:paddingLeft="15dp"
                        android:background="@color/White"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/down_arrow"
                        app:tint="@color/Gray" />



                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:textColor="@color/Black"
                android:gravity="left"
                android:text="Color Base*" />

            <androidx.cardview.widget.CardView
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edt_base"
                        android:textSize="13sp"
                        android:hint="Select Color Base"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:focusable="false"
                        android:enabled="true"
                        android:editable="false"
                        android:paddingLeft="15dp"
                        android:background="@color/White"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/down_arrow"
                        app:tint="@color/Gray" />



                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:textColor="@color/Black"
                android:gravity="left"
                android:text="Pack Size*" />

            <androidx.cardview.widget.CardView
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edt_color_pack_size"
                        android:textSize="13sp"
                        android:hint="Select Pack Size"
                        android:paddingLeft="15dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:focusable="false"
                        android:enabled="true"
                        android:editable="false"
                        android:background="@color/White"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/down_arrow"
                        app:tint="@color/Gray" />



                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:textColor="@color/Black"
                android:gravity="left"
                android:text="Number Of Can*" />

            <androidx.cardview.widget.CardView
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edt_no_of_can"
                        android:textSize="13sp"
                        android:hint="Enter Number Of Can"
                        android:paddingLeft="15dp"
                        android:inputType="number"
                        android:maxEms="2"
                        android:maxLines="1"
                        android:background="@color/White"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/down_arrow"
                        app:tint="@color/Gray" />



                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/txt_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:gravity="center_horizontal"
                android:text="" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_calculate"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginRight="18dp"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">


                <RelativeLayout
                    android:background="@color/Orange_Salmon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="true"
                        android:text="Calculate Price"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/White"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:padding="6dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right_arrow_white"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="@color/White" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/btn_next"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:background="@android:color/transparent"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">


                <RelativeLayout
                    android:background="@color/Yellow_Green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="true"
                        android:text="Next"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/White"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:padding="6dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right_arrow_white"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="@color/White" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>